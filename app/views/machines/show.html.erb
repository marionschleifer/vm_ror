<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @machine.name %>
</p>

<p>
  <strong>Positions:</strong>
  <%= @machine.positions %>
</p>

<p>
  <strong>Current position:</strong>
  <%= @machine.current_position %>
</p>

